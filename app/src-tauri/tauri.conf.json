{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MCP Link",
  "version": "0.1.0",
  "identifier": "com.ssafy12ksh.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MCP Link",
        "width": 750,
        "height": 550,
        "decorations": false,
        "transparent": false,
        "minWidth": 750,
        "minHeight": 550
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {},
    "os": {},
    "notification": null,
    "single-instance": null,
    "dialog": null,
    "deep-link": {
      "desktop": {
        "schemes": ["mcplink"]
      },
      "domains": ["mcplink.app", "mcplink"]
    },
    "http": {
      "all": true,
      "request": true,
      "scope": ["https://**", "http://**", "file://**"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png", "icons/icon.ico", "icons/icon.icns"],
    "resources": ["../src/lib/fonts/PretendardVariable.woff2"]
  }
}
